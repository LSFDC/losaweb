{
  "extends": "@losaweb/typescript-config/base.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@losaweb/database/*": ["./src/*"]
    }
  },
  "include": [".", "**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
