{
  "extends": "@losaweb/typescript-config/base.json",
  "compilerOptions": {
    "module": "ESNext",
    "outDir": "./dist",
    "allowJs": true,
    "moduleResolution": "node10",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@losaweb/database/*": ["./src/*"]
    }
  },
  "include": [".", "**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
